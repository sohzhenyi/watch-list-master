<div class="card-trip">
  <img src= "<%= bookmark.movie.poster_url %>" />
    <div class="card-trip-infos">
      <div>
        <h2><%= bookmark.movie.title %> - <%= bookmark.movie.rating %><i class="fas fa-star" style="color: yellow;"></i></h2>
        <p><%= bookmark.movie.overview %></p>
      </div>
    </div>
  <div class="d-flex justify-content-between card-footer">
    <div>
      <i class="fas fa-quote-left"></i>
        <%= bookmark.comment %>
    </div>
    <%= link_to "delete", bookmark_path(bookmark), style:"color: red;", method:"delete", data: {confirm: "Are you sure?"} %>
  </div>
</div>
